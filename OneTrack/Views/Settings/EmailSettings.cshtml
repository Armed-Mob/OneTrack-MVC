@model OneTrack.Email_Services.EmailSettings

<h2 class="mb-3">Email Settings</h2>

<form asp-action="EmailSettings" method="post">
    <div class="form-group mb-2">
        <label asp-for="SmtpServer">SMTP Server</label>
        <input asp-for="SmtpServer" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Port">Port</label>
        <input asp-for="Port" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="UserName">User Name</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
    </div>
     <div class="form-group mb-2">
        <label asp-for="FromEmail">From Email</label>
        <input asp-for="FromEmail" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="FromName">From Name</label>
        <input asp-for="FromName" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="EnableSsl">Enable SSL</label>
        <input asp-for="EnableSsl" class="form-check-input" type="checkbox" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="IsBodyHtml">Enable Html Body</label>
        <input asp-for="IsBodyHtml" class="form-check-input" type="checkbox" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update Settings</button>
</form>